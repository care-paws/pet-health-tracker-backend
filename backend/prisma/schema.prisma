generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  email        String @unique
  passwordHash String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pets      Pet[]
}

model Pet {
  id         String    @id @default(uuid())
  name       String
  species    String
  breed      String
  gender     String
  age        DateTime
  weight     Float
  weighedAt DateTime?
  notes      String?
  photoUrl   String
  user       User      @relation(fields: [userId], references: [id])
  userId     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]
}

model Event {
  id            String     @id @default(uuid())
  type          EventType
  description   String
  date          DateTime
  attachmentUrl String
  petId         String
  pet           Pet        @relation(fields: [petId], references: [id], onDelete: Cascade)
  reminders     Reminder[]
}

model Reminder {
  id          String         @id @default(uuid())
  triggerTime DateTime
  status      ReminderStatus @default(PENDING)
  description String?
  eventId     String
  event       Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

enum EventType {
  VACCINE
  VET_VISIT
  FEEDING
}

enum ReminderStatus {
  PENDING
  SENT
}
